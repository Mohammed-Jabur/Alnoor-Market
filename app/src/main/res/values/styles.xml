<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <style name="button_style">
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="rippleColor">@null</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_view_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/pink_app</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="card_view_style">
        <item name="contentPadding">16dp</item>
        <item name="cardElevation">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/blue_gray_dark</item>
    </style>

    <style name="card_text_view_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/pink_app</item>
    </style>

    <style name="card_text_view_2_style">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>